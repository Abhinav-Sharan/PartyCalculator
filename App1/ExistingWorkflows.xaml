<Page
    x:Class="PartyCalculator.ExistingWorkflows"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PartyCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="4,86,0,0" TextWrapping="Wrap" Text="View Workflows you are part of:" VerticalAlignment="Top" Width="280"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="414" Margin="4,111,0,0" VerticalAlignment="Top" Width="346"/>
        <Button x:Name="button" Content="Open Workflow" HorizontalAlignment="Left" Margin="10,550,0,0" VerticalAlignment="Top" Width="321" Click="button_Click"/>
        <Button x:Name="button1" Content="End My Workflow" HorizontalAlignment="Left" Margin="10,603,0,0" VerticalAlignment="Top" Width="321" Click="button1_Click"/>
    </Grid>
</Page>
